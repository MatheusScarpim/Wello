# ==============================================
# CONFIGURACAO SCARLATCHAT - AMBIENTE DOCKER
# ==============================================
# Copie este arquivo para .env e preencha os valores

OPENAI_API_KEY=sk-sua-chave-aqui

# ----------------------------------------------
# MODO DE OPERACAO
# ----------------------------------------------
NXZAP_LITE=false                    # true = Modo leve (sem bots complexos)
NXZAP_WPP=true                      # true = Ativa WhatsApp Web | false = Usa Meta API
WHATSAPP_MULTI_INSTANCE=true        # true = Usa Multi-Instancia | false = Sessao unica legacy

# ----------------------------------------------
# SERVIDOR
# ----------------------------------------------
PORT=8090
HTTP_PORT=8081                      # Porta interna do container (nao mude)
NODE_ENV=production
CORS_ORIGIN=*                       # Em producao, especifique dominios: https://seusite.com
VITE_API_URL=http://localhost:8091

# ----------------------------------------------
# DATABASE (MONGODB)
# ----------------------------------------------
DB_NAME=ScarlatDataBase
DB_HOST=mongodb                     # Nome do servico no Docker Compose
DB_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=SUA_SENHA_SEGURA_AQUI
DB_URL=mongodb://admin:SUA_SENHA_SEGURA_AQUI@mongodb:27017/?authSource=admin

# ----------------------------------------------
# WEBHOOKS DE SAIDA
# ----------------------------------------------
URL_WEBHOOK_MENSAGENS=https://seu-dominio.com/api/v1/webhooks/atendimento/mensagens
WEBHOOK_EVENTS=message,status,connection

# ----------------------------------------------
# META WHATSAPP BUSINESS API
# ----------------------------------------------
# Se NXZAP_WPP=false, usa essas credenciais
TOKEN_META=Bearer SEU_TOKEN_META_AQUI
CODE_META=SEU_PHONE_NUMBER_ID
URL_META=https://graph.facebook.com/v21.0/
META_API_VERSION=v21.0
META_VERIFY_TOKEN=seu-token-de-verificacao

# Meta Pages/Apps IDs
META_PAGE_ID=SEU_PAGE_ID
META_APP_ID=SEU_APP_ID
META_APP_SECRET=SEU_APP_SECRET

# ----------------------------------------------
# WHATSAPP WEB (WPPCONNECT)
# ----------------------------------------------
# Se NXZAP_WPP=true, usa essas configuracoes
WHATSAPP_DEVICE_NAME=NxZap_Docker
WHATSAPP_DEVICE_ID=1

# ----------------------------------------------
# SEGURANCA E AUTENTICACAO
# ----------------------------------------------
# Secret para JWT - MUDE ESTE VALOR EM PRODUCAO!
JWT_SECRET=GERE_UM_SECRET_SEGURO_AQUI

# ----------------------------------------------
# BOT INFO
# ----------------------------------------------
BOT_SYSTEM=Scarlat
BOT_NAME=Scarlat
BOT_VERSION=2.0.0
BOT_DESCRIPTION=Bot de atendimento multicanal
BOT_AUTHOR=SeuNome
BOT_ENABLED=true
BOT_IDENTIFIER=seu-identificador
TIRE_BOT_CONFIG_PASSWORD=SUA_SENHA_AQUI

# ----------------------------------------------
# TELEGRAM (OPCIONAL)
# ----------------------------------------------
TELEGRAM_BOT_TOKEN=SEU_TOKEN_TELEGRAM

# ----------------------------------------------
# FACEBOOK (OPCIONAL)
# ----------------------------------------------
FACEBOOK_PAGE_ID=SEU_PAGE_ID
FACEBOOK_APP_ID=SEU_APP_ID
FACEBOOK_APP_SECRET=SEU_APP_SECRET

# ----------------------------------------------
# INSTAGRAM (OPCIONAL)
# ----------------------------------------------
INSTAGRAM_PAGE_ID=SEU_PAGE_ID
INSTAGRAM_APP_ID=SEU_APP_ID
INSTAGRAM_APP_SECRET=SEU_APP_SECRET

# ----------------------------------------------
# TWITTER (OPCIONAL)
# ----------------------------------------------
TWITTER_PAGE_ID=SEU_PAGE_ID
TWITTER_APP_ID=SEU_APP_ID
TWITTER_APP_SECRET=SEU_APP_SECRET
